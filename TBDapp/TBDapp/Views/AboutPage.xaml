<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBDapp.Views.AboutPage"
             xmlns:vm="clr-namespace:TBDapp.ViewModels"
             Title="Acerca de">


    <Grid>
        
        <Image Source="about_wp" Aspect="AspectFill"></Image>
        <BoxView Color="#CA3D3D" Opacity=".5"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">  
                
                <Button WidthRequest="100" HeightRequest="80" Margin="100,80" Opacity=".8" Text="Contactanos"></Button>
            </StackLayout>
            
        </Grid>



    </Grid>

</ContentPage>
