<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBDapp.Views.AboutPage"
             xmlns:vm="clr-namespace:TBDapp.ViewModels"
             Title="Contactanos">


    <Grid>
        
        <Image Source="about_wp" Aspect="AspectFill"></Image>
        <BoxView Color="#CA3D3D" Opacity=".5"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">


                <Button Margin="143,50,140,10" FontFamily="{StaticResource FontAwesomeBrands}" Text="&#xf09a;" FontSize="60" BorderRadius="20" BackgroundColor="#3b5998" Opacity=".9"/>
                <Button Margin="143,50,140,10" FontFamily="{StaticResource FontAwesomeBrands}" Text="&#xf232;" FontSize="60" BorderRadius="20" BackgroundColor="#00bb2d" Opacity=".9"/>
                <Button Margin="143,50,140,10" FontFamily="{StaticResource FontAwesomeSolid}" Text="&#xf0e0;" FontSize="60" BorderRadius="20" BackgroundColor="Gray" Opacity=".9"/>
            </StackLayout>
            
        </Grid>



    </Grid>

</ContentPage>
